<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    <bean class="org.lgf.jahia.booking.action.AddBookingAction">
        <property name="name" value="addBooking"/>
        <property name="jcrTemplate" ref="jcrTemplate"/>
        <property name="requireAuthenticatedUser" value="true"/>
        <property name="requiredPermission" value=""></property>
    </bean>    	
    
    <bean class="org.lgf.jahia.booking.action.ValidateBookingAction">
        <property name="name" value="validate"/>
        <property name="jcrTemplate" ref="jcrTemplate"/>
        <property name="requireAuthenticatedUser" value="true"/>
        <property name="requiredPermission" value=""></property>
    </bean>    	
</beans>


